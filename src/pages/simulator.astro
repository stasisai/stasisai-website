---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Stasis AI | Compiling Simulation">
  <!-- FIXED HEADER -->
  <header class="site-header" id="main-header">
    <a href="/" class="header-brand">
      <img src="/logo-stasis-grey.svg" alt="Stasis AI" class="header-logo" />
      <span class="header-name">Stasis</span>
    </a>
    <nav class="header-nav hidden-mobile">
      <a href="/docs" class="nav-link">Docs</a>
      <a href="/simulator" class="nav-link">Simulator</a>
      <a href="/blog" class="nav-link">Blog</a>
      <a href="/about" class="nav-link">About</a>
      <a href="https://github.com/stasisai" class="nav-link" target="_blank">GitHub ↗</a>
    </nav>
    <button class="burger-btn" id="burger-btn" aria-label="Toggle Menu">
      <span></span><span></span><span></span>
    </button>
  </header>

  <!-- MOBILE OVERLAY MENU -->
  <div class="mobile-menu" id="mobile-menu">
    <div class="mobile-menu-inner">
      <a href="/docs" class="mobile-link">Docs</a>
      <a href="/simulator" class="mobile-link">Simulator</a>
      <a href="/blog" class="mobile-link">Blog</a>
      <a href="/about" class="mobile-link">About</a>
      <a href="https://github.com/stasisai" class="mobile-link" target="_blank">GitHub ↗</a>
    </div>
  </div>

  <div class="wip-container">
    <div class="wip-content">
      <div class="status-badge">STATUS_BUILDING // WASM TARGET</div>
      <h1 class="wip-title">Simulator in <em>Active Development</em>.</h1>
      <p class="wip-desc">
        The full simulation engine is currently being written in Rust using the Bevy framework. We are optimizing our zero-cost abstractions before releasing the WebAssembly payload.
      </p>
      <a href="/" class="btn-docs">Return to Root</a>
    </div>
  </div>

  <style>
    /* ─── Header Override ─── */
    .site-header {
      position: fixed; top: 0; left: 0; right: 0; z-index: 200;
      padding: 16px 32px; display: flex; align-items: center; justify-content: space-between;
      background: rgba(245,242,238,0.9); backdrop-filter: blur(16px);
      border-bottom: 1px solid rgba(0,0,0,0.06);
    }
    .header-brand { display: flex; align-items: center; gap: 10px; text-decoration: none; }
    .header-logo { height: 20px; }
    .header-name { font-family: var(--mono); font-weight: 500; letter-spacing: 0.1em; color: var(--dark); font-size: 13px; text-transform: uppercase; }
    .header-nav { display: flex; gap: 24px; align-items: center; }
    .nav-link { font-family: var(--mono); text-transform: uppercase; font-size: 12px; letter-spacing: 0.08em; color: var(--text); text-decoration: none; transition: opacity 0.2s; }
    .nav-link:hover { opacity: 0.6; }

    .burger-btn {
      display: none; flex-direction: column; justify-content: space-between;
      width: 24px; height: 16px; background: transparent; border: none; cursor: pointer;
      z-index: 200;
    }
    .burger-btn span {
      display: block; width: 100%; height: 2px; background: var(--dark);
      border-radius: 2px; transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }
    .burger-btn.open span:nth-child(1) { transform: translateY(7px) rotate(45deg); }
    .burger-btn.open span:nth-child(2) { opacity: 0; }
    .burger-btn.open span:nth-child(3) { transform: translateY(-7px) rotate(-45deg); }

    .mobile-menu {
      position: fixed; top: 0; left: 0; width: 100%; height: 100vh;
      background: var(--surface); z-index: 150;
      display: flex; flex-direction: column; justify-content: center; align-items: center;
      opacity: 0; pointer-events: none; transition: opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }
    .mobile-menu.open { opacity: 1; pointer-events: auto; }
    .mobile-menu-inner { display: flex; flex-direction: column; gap: 32px; text-align: center; }
    .mobile-link {
      font-family: var(--serif); font-size: 2rem; color: var(--dark);
      text-decoration: none; transition: opacity 0.2s;
    }
    .mobile-link:hover { opacity: 0.5; }

    /* ─── WIP Section ─── */
    .wip-container {
      height: 100vh; width: 100%; display: flex; align-items: center; justify-content: center;
      background: var(--surface); color: var(--text); padding: 24px; text-align: center;
    }
    .status-badge {
      display: inline-block; font-family: var(--mono); font-size: 10px; text-transform: uppercase;
      letter-spacing: 0.15em; padding: 8px 16px; background: rgba(0,0,0,0.03); border: 1px solid rgba(0,0,0,0.05);
      border-radius: 4px; margin-bottom: 24px; color: var(--text-sec);
      animation: pulse 2.5s infinite;
    }
    .wip-title {
      font-family: var(--serif); font-size: clamp(2rem, 4vw, 3.5rem); line-height: 1.1; margin-bottom: 24px; letter-spacing: -1px;
    }
    .wip-title em { color: rgba(10,10,10,0.4); font-style: italic; }
    .wip-desc {
      font-family: var(--sans); font-weight: 300; font-size: 1rem; color: var(--text-sec); max-width: 520px;
      margin: 0 auto 40px; line-height: 1.6;
    }
    
    .btn-docs {
      display: inline-block; background: transparent;
      border: 1px solid var(--dark); color: var(--dark);
      font-family: var(--mono); font-size: 12px; text-transform: uppercase;
      padding: 12px 28px; cursor: pointer; text-decoration: none;
      transition: background 0.2s, color 0.2s; letter-spacing: 0.05em;
    }
    .btn-docs:hover { background: var(--dark); color: var(--text-dark); }
    
    @keyframes pulse { 0%, 100% { opacity: 0.5; } 50% { opacity: 1; border-color: rgba(0,0,0,0.15); } }

    @media (max-width: 600px) {
      .site-header { padding: 12px 20px; }
      .header-logo { height: 22px; }
      .header-name { font-size: 11px; }
      .header-nav { display: none; }
      .burger-btn { display: flex; }
      .hidden-mobile { display: none; }
    }
  </style>

  <script is:inline>
    document.addEventListener("DOMContentLoaded", () => {
      const burgerBtn = document.getElementById('burger-btn');
      const mobileMenu = document.getElementById('mobile-menu');

      if (burgerBtn && mobileMenu) {
        burgerBtn.addEventListener('click', () => {
          burgerBtn.classList.toggle('open');
          mobileMenu.classList.toggle('open');
          document.body.style.overflowY = mobileMenu.classList.contains('open') ? 'hidden' : 'scroll';
        });
        
        const mobileLinks = mobileMenu.querySelectorAll('.mobile-link');
        mobileLinks.forEach(link => {
          link.addEventListener('click', () => {
            burgerBtn.classList.remove('open');
            mobileMenu.classList.remove('open');
            document.body.style.overflowY = 'scroll';
          });
        });
      }
    });
  </script>
</Layout>
